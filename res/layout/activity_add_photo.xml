<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/add_photo_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/abs__ab_share_pack_holo_light"
        android:layout_gravity="center"
        android:layout_margin="10dp" />
    
    <EditText
        android:id="@+id/add_photo_commentbox"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="@string/add_photo_comment"
        android:layout_marginBottom="10dp" />
    
    <Button
        android:id="@+id/add_photo_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_photo_send"
        android:layout_gravity="center" />

</LinearLayout>